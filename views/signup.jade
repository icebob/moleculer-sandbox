extends layout

block content

	h1 Sign Up
	form(action='/signup', method='post')
		p
			label(for='username') Username:
			br
			input(name='username')
		p
			label(for='username') Password:
			br
			input(type='password', name='password')
		p
			input(type='submit')
		p
			if providers.indexOf("google") !== -1
				a(href='/auth/google') Sign up with Google
				br
			if providers.indexOf("facebook") !== -1
				a(href='/auth/facebook') Sign up with Facebook
				br
			if providers.indexOf("github") !== -1
				a(href='/auth/github') Sign up with Github
				br
			if providers.indexOf("twitter") !== -1
				a(href='/auth/twitter') Sign up with Twitter
				br
